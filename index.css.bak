html,
body {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    font-size: 10px;
}

.header {
    background-color: #f2f7f3;
}

.khung1 {
    width: 100%;
    height: 150px;
    text-align: center;
    color: #000066;
    border: 100px;
    margin: 0px;
}

h1 {
    text-align: center;
    font-family: Tahoma;
    font-size: 25px;
    color: #E34053;
    line-height: 1.5;
    margin: 0px;
    margin-right: 100px;
	margin-left: 80px;
}

h2 {
    text-align: center;
    font-family: Tahoma;
    color: #6C7B8B;
    line-height: 1.5;
    margin: 0px;
    font-size: 25px;
    margin-right: 100px;
	margin-left: 80px;
}

h4 {
    text-align: left;
    font-family: Tahoma;
    color: #030243;
    line-height: 0.5;
    margin: 0px;
    font-size: 20px;
}

h5 {
    text-align: left;
    font-family: Tahoma;
    color: #030243;
    margin: 0px;
    margin-left: 60px;
    font-size: 20px
}

img {
    width: 500px;
    height: 100px;
}


/* kết thúc phần header */


/* bắt đầu phần đăng nhập*/

b {
    font-weight: bolder;
    text-align: center;
    color: #030314;
    font-size: 30px;
}

h3 {
    font-family: Tahoma;
    font-size: 30px;
    margin-top: 10px;
    text-align: center;
}

.khung2 {
    background-color: #f6f9f8;
    margin-top: 50px;
    text-align: center;
    padding: 10px;
    width: 50%;
    font-weight: bolder;
    border: 15px outset #f0f809;
    cursor: pointer;
    margin-bottom: 50px;
}

.khung3 {
    width: 80%;
    height: 50px;
    font-size: 15px;
    background: #fdfbfb;
    cursor: pointer;
}

.khung4 {
    cursor: pointer;
    font-family: Tahoma;
    font-size: 25px;
    font-weight: bolder;
    margin-top: 10px;
    margin-left: 200px;
    height: 50px;
    width: center;
    background-color: white;
    color: black;
    border: 2px solid #1dc814;
}

.khung4:hover {
    background-color: #1307f1c6;
    color: white;
}


/* bắt đầu phần footer */

p {
    font-weight: bolder;
    text-align: center;
    color: rgb(38, 0, 255);
    font-size: 30px;
}

div.footer {
    background-color: #CCFFCC;
    text-align: left;
    height: 0px;
}


/* kết thúc phần footer */

td {
    height: 30px;
}


